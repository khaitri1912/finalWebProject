@model WebBanHang.Pages.CartHandling.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout2";
}


<style>
    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #FFFF99;
    }

    th, td {
        padding: 10px;
        text-align: center;
        vertical-align: middle;
        border: solid 1.7px;
        
    }

    body {
        background-image: url(https://haycafe.vn/wp-content/uploads/2022/07/background-vang-kim.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    th{
        font-weight: bold;
        font-size: 15px;
        text-transform: uppercase;
        font-family: 'Lobster', cursive;
    }

</style>


@*<p>
    <a asp-page="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioHangDangXuLy[0].TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GioHangDangXuLy) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <img style="width:auto;height:150px" src="@Html.DisplayFor(modelItem => item.Photo)">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                    @string.Format("{0:#,##0}", item.Price)
                    <text>VND</text>
            </td>
            <td>
                    @string.Format("{0:#,##0}", item.Price)
                    <text>VND</text>
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="cssbuttons-io-button1">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" class="cssbuttons-io-button1">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="cssbuttons-io-button1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
